<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_centerInParent="true"
        >
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="true"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        >

        <ImageView
            android:id="@+id/res"
            android:layout_width="225dp"
            android:layout_height="180dp"
            android:scaleType="fitStart"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/imageButton1"
                android:layout_width="93dp"
                android:layout_height="105dp"
                android:src="@drawable/bos"

                android:layout_below="@+id/res"
                android:scaleType="fitXY"

                />

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="93dp"
                android:layout_height="105dp"
                android:layout_marginLeft="50dp"
                android:scaleType="fitXY"
          android:src="@drawable/tam"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:text="Yetersiz Bakiye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:textStyle="bold"



                />

            <TextView

                android:layout_width="93dp"
                android:text="Tam Akbil"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
             android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
        android:id="@+id/imageButton3"
            android:layout_width="93dp"
            android:layout_height="105dp"
            android:src="@drawable/indi"

            android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/imageButton5"
        android:layout_width="90dp"
        android:layout_height="105dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/asd"
        android:layout_below="@+id/ad"
        android:scaleType="fitXY"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:text="Ä°ndirimli Akbil"
                android:layout_width="100dp"
                android:layout_height="wrap_content"


                android:textStyle="bold"

                />

            <TextView

                android:layout_width="90dp"
                android:text="Aktarma"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="225dp"
                android:layout_height="90dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/bus" />

            />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2827780552516739/8836354137">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>